@{
    Layout = "_EditorLayout";
    @model Genre

}

<h2>Edit your genre</h2>
<form asp-controller="Genre" asp-action="Update" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="name" class="form-label">Genre's Name</label>
        <input class="form-control" id="name" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
