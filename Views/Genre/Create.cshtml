@{
    Layout = "_EditorLayout";
    @model Genre;
}
<div>
    <form asp-controller="Genre" asp-action="Create" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="name" class="form-label">Genre's Name</label>
            <input class="form-control" id="name" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>
